@import default-v1/colors

nav
    display: block
    float: left
    width: 100%
    background: $white
    border-bottom: 0.3rem solid $bright-blue
    ul
        li
            float: left
            max-height: 6rem
            width: 25%
            a
                display: block
                padding: 3.9rem 0rem 0.3rem
                background: $white
                font-weight: 600
                color: $green
                font-size: 1.2rem
                white-space: nowrap
                text-align: center
            a.logo
                margin: 0 auto
                padding: 0
                height: 6rem
                width: 6rem
                &:hover
                    background: transparent
                img
                    width: 6rem
                    height: 6rem
            a.icon
                background-position: center .8rem
                background-repeat: no-repeat
                &:hover
                    background-position: center .8rem
                    background-repeat: no-repeat
            a.cards
                border-left: 0.1rem solid rgba(78,191,122,0.3)
                border-right: 0.1rem solid rgba(78,191,122,0.3)
                background-image: url(@{StaticR img_icon_cards_png})
            a.cards:hover, a.cards:focus, a.cards.active
                background-image: url(@{StaticR img_icon_cards_sel_png})
            a.lookingglass
                background-image: url(@{StaticR img_icon_lookingglass_png})
            a.lookingglass:hover, a.lookingglass:focus, a.lookingglass.active
                background-image: url(@{StaticR img_icon_lookingglass_sel_png})
            a.login
                border-right: 0.1rem solid rgba(78,191,122,0.3)
                background-image: url(@{StaticR img_icon_login_png})
            a.login:hover, a.login:focus, a.login.active
                background-image: url(@{StaticR img_icon_login_sel_png})
            a.dashboard
                border-right: 0.1rem solid rgba(78,191,122,0.3)
                background-image: url(@{StaticR img_default_avatar_png})
                background-size: 3rem 3rem
            a.dashboard:hover, a.dashboard:focus, a.dashboard.active
                background-image: url(@{StaticR img_default_avatar_png})
                background-size: 3rem 3rem
            a.notification
                position: absolute
                top: 1.7rem
                left: -2.5rem
                height: 2rem
                width: 2rem
                border-radius: 2rem
                background: $dark-blue
                color: $white
                font-family: "League Spartan"
                font-size: 1.5rem
                padding: 0.4rem 0.3rem 0.2rem
                text-shadow: 0.2rem 0.2rem 0 $dark-blue
                z-index: 300
                &:hover
                    padding: 0.6rem 0.5rem 0.3rem
                    top: 1.5rem
                    left: -2.7rem
                    background: $dark-blue
                    color: $white
                    text-shadow: 0.2rem 0.2rem 0 $dark-blue
            .ddown
                display: block
                position: relative
                .ddown-toggle
                    padding: 1.5rem
                    display: inline-block
                    background: $white
                    &:after
                        content: " â–¼"
                        font-size: 70%
                        top: -0.2rem
                        position: relative
                ul
                    display: none
                    text-align: center
                    position: absolute
                    top: 0
                    right: 0
                    padding: 6rem 0 0
                    &:hover
                        display: block
                    &:active ul
                        display: block
                    li
                        background: $white
                        width: 100%
                        list-style: none
                        height: auto
                        margin: 0
                        a
                            text-align: left
                            display: block
                            padding: 0.5rem 1.5rem
                            background: $white
                            font-weight: 400
                            border-left: 0 solid $white
                            span
                                font-size: 1.4rem
                                letter-spacing: -0.1rem
                                padding:  0 0 0 0.2rem
                                font-weight: 600
                        a:hover, a:focus, a.active
                            background: #e8fafe
                        li.active
                            display: none
                    li:last-child
                        padding-bottom: 0.6rem
                        border-radius: 0 0 0 0.5rem
            &:active ul
                    display: block
                    outline: none
        li a:hover, a.active
                color: $dark-blue
                background: $bright-blue
                text-shadow: 0.2rem 0.1rem 0 $white
                border-color: transparent
        li.search
            z-index: 40
            form
                text-align: center
                display: none
                padding: 1.6rem 2rem
                white-space: nowrap
                input
                    font-size: 2rem
                    font-family: "Nunito", sans-serif
                    font-weight: 600
                    color: $green
                    background: rgba(78,191,122,0.12)
                    width: 12rem
                    border: none
                    border-radius: 2.7rem/4.7rem
                    border-top-right-radius: 0
                    border-bottom-right-radius: 0
                    transition: all 0.12s ease-out 0s
                    padding: 0 0 0 1rem
                    &::-webkit-input-placeholder
                        color: $green
                    &:focus::-webkit-input-placeholder
                        color:transparent
                    &::-moz-placeholder
                       color: $green
                    &:focus::-moz-placeholder
                        color:transparent
                    &:-ms-input-placeholder
                       color: $green
                    &:focus:-ms-input-placeholder
                        color:transparent
                button
                    font-size: 2rem
                    font-family: "Nunito", sans-serif
                    bottom: 0
                    margin: 0
                    width: 4rem
                    background: url(@{StaticR img_icon_lookingglass_white_png}) 1rem center no-repeat $green
                    background-size: 1.7rem
                    color: transparent
                    outline: none
                    border: none
                    border-radius: 2.7rem/4.7rem
                    border-top-left-radius: 0
                    border-bottom-left-radius: 0
                    cursor: pointer
                    &:hover
                        background-color: $green-shade
    ul.right
        float: left
        position: absolute
        right: 0
        top: 0
        max-height: 6rem
        z-index: 3
/* break1 */
@media (min-width: 301px)
    nav
        ul
            li
                a.login
                    border-right: 0
        ul.main
            li.unbreak4
                float: right
/* break3 */
@media (min-width: 571px)
    nav
        ul
            li
                width: 20%
            li.search
                width: 40% /* search gets 2 slots in width*/
                .lookingglass
                    display: none
                form
                    display: block
/* break4 */
@media (min-width: 751px)
    nav
        ul
            li
                width: auto
                a
                    padding: 1.7rem 2rem 1.3rem
                    font-size: 2rem
                a.icon, a.icon.active, a.icon:hover, a.icon:focus
                    background-image: none
                a.logo, a.cards
                    border: 0
                a.logo
                    padding: 0 1.3rem 0 4rem
                    height: 6rem
                    width: 6rem
                    &:hover
                        background: transparent
            li.search
                width: auto
        ul.main
            max-width: 105rem
            min-height: 6rem
            margin: 0 auto
/* break5 */
@media (min-width: 841px)
    nav
        ul
            li
                a
                    padding: 1.7rem 2.6rem 1.3rem
                .ddown .ddown-toggle.user
                    padding-right: 6.5rem
                    background: url(@{StaticR img_default_avatar_png}) right center no-repeat
                    background-size: 6rem
            li.search
                form:hover input
                    width: 20rem
                form input:focus
                    width: 20rem
/* break6 */
@media (min-width: 1111px)
    nav
        ul
            li
                a.logo
                    margin: 0 0 0 -4rem
